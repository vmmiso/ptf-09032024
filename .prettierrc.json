{
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 100,
  "useTabs": false,
  "endOfLine": "auto",
  "jsxSingleQuote": true,
  "bracketSpacing": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^@core/(.*)$",
    "^@server/(.*)$",
    "^@ui/(.*)$",
    "@pages/(.*)$",
    "@components/(.*)$",
    "@hooks/(.*)$",
    "@assets/(.*)$",
    "^[./]"
  ],
  "importOrderSortSpecifiers": true
}
